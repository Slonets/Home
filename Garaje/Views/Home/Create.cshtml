@using BusinessLogicLayer.DTOs
@model CarDto

<div class="container">
    <div class="row">
        <h2>Створити нове авто</h2>
    </div>


    @*enctype="multipart/form-data" дозволяє зберігати файли*@
<form method="post" asp-controller="Home" asp-action="Create" class="row g-3" enctype="multipart/form-data">    

    @*означає, що виведе усі помилки зверху*@
    <div asp-validation-summary="All"></div>

  <div class="col-md-6">
    <label asp-for="ModelCar" for="ModelCar" class="form-label">Модель авто</label>
    <input asp-for="ModelCar" type="text" class="form-control">
   @* підключаємо перевірку обєкту, а form-text text-danger означає, що буде червоний текст*@
    <span asp-validation-for="ModelCar" class="form-text text-danger"></span>
  </div>

  <div class="col-md-6">
    <label asp-for="ColorCar" for="ColorCar" class="form-label">Колір авто</label>
    <input asp-for="ColorCar" type="text" class="form-control">
    <span asp-validation-for="ColorCar" class="form-text text-danger"></span>
  </div>
  

  <div class="col-md-6">
    <label asp-for="Price" for="Price" class="form-label">Ціна</label>
    <input asp-for="Price" type="number" class="form-control" placeholder="Тут має бути ціна авто">
    <span asp-validation-for="Price" class="form-text text-danger"></span>
</div>

 <div class="col-md-6">
  <label asp-for="Quantity" for="Quantity" class="form-label">Кількість доступних авто</label>
  <input asp-for="Quantity" type="number" class="form-control">
  <span asp-validation-for="Quantity" class="form-text text-danger"></span>
 </div>

  <div class="col-md-6">
    <label asp-for="Image" for="Image" class="form-label">Вибири файл для завантаження</label>
    <input asp-for="Image" type="file" class="form-control" placeholder="Тут має бути посилання на фото">
   @* <span asp-validation-for="Image" class="form-text text-danger"></span>*@
</div>

  <div class="col-md-12">
    <label asp-for="Discription" for="Discription" class="form-label">Опис</label>
    <input asp-for="Discription" type="text" class="form-control">
    <span asp-validation-for="Discription" class="form-text text-danger"></span>
</div>

  <div class="col-md-6">
    <label asp-for="CategoryId" class="form-label">Категорія</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.ListCategory" class="form-select">Обери</select>
    <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
</div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Зберегти</button>
  </div>

</form>

</div>
